{
	"name": "@betaorbust/advent-of-code-2022",
	"version": "0.0.0",
	"description": "AOC 2022",
	"main": "index.js",
	"scripts": {
		"format": "prettier --loglevel warn --write \"**/*.{js,ts,jsx,tsx,mdx,vue,json,json5,yaml,md,html,less,sass,css,gql}\"",
		"posttest": "npm run format",
		"prepare": "husky install",
		"lint": "eslint ./",
		"pretest": "tsc --noEmit",
		"build": "tsc",
		"dev": "tsc -w",
		"test:jest": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test": "npm run test:jest --"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/betaorbust/aoc2022.git"
	},
	"keywords": [],
	"author": "",
	"license": "UNLICENSED",
	"bugs": {
		"url": "https://github.com/betaorbust/aoc2022/issues"
	},
	"homepage": "https://github.com/betaorbust/aoc2022#readme",
	"private": true,
	"devDependencies": {
		"@betaorbust/eslint-config": "^4.0.1",
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@jest/globals": "^29.3.1",
		"@types/jest": "^29.2.4",
		"eslint": "^8.29.0",
		"husky": "^8.0.2",
		"jest": "^29.3.1",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.0",
		"ts-jest": "^29.0.3",
		"typescript": "^4.9.3"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,mdx,vue,json,json5,yaml,md,html,less,sass,css,gql}": "prettier --write"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				2,
				"always",
				[
					"sentence-case"
				]
			],
			"subject-full-stop": [
				2,
				"always",
				"."
			]
		}
	},
	"dependencies": {
		"tslib": "^2.4.1"
	},
	"jest": {
		"testPathIgnorePatterns": [
			"/node_modules/",
			"<rootDir>/dist/"
		],
		"transform": {
			"^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json"
		]
	}
}
